{% extends "layouts.njk" %}

{% block content %}

<section class="card table">

    <div class="table header students">
        <a class="students-create" href="/students/create">Fazer cadastro</a>
        <form action="/students" method="GET" name="filter">
            <input type="text" name="filter" value="{{filter}}" placeholder="Nome ou Email">
            <button type="submit">Filtrar</button>
        </form>
    </div>
    
    <table>
        <thead>
            <tr>
                <th>Nome Completo</th>
                <th>Email</th>
                <th>Ano Escolar</th>
                <th>Ação</th>
            </tr>
        </thead>
        <tbody>
            {% for student in students %}
            <tr>
                <td>
                    <span style="background-image: url({{student.avatar_url}})"></span>
                    {{student.name}}
                </td>
                <td>
                    {{student.email}}
                </td>
                <td>
                    {{student.grade}}
                </td>
                
                <td><a href="/students/{{student.id}}">Ver mais</a></td>
            </tr>
            {% endfor %}
        </tbody>

    </table>

    <div class="paginate"
        data-page="{{pagination.page}}"
        data-total="{{pagination.total}}"
        data-filter="{{filter}}"
    ></div>
</section>
{% endblock content %}