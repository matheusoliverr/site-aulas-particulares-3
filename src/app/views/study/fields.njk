<section class="card-info">

        <div class="info create">
            <div>URL do avatar</div>
            <input 
                type="url" 
                name="avatar_url"
                placeholder=" http://"
                value="{{student.avatar_url}}"
            >
        </div>

        <div class="info create">
            <div>Nome Completo</div>
            <input 
                type="text" 
                name="name"
                value="{{student.name}}"
            >
        </div>

        <div class="info create">
            <div>Data de nascimento</div>
            <input 
                type="date" 
                name="birth"
                value="{{student.birth}}"
            >
        </div>

        <div class="info create">
            <div>Email</div>
            <input 
                type="email" 
                name="email"
                value="{{student.email}}"
            >
        </div>

        <div class="info create">
            <div>Ano escolar</div>
            <select name="grade">
                <option value="5F">5° ano do Ensino Fundamental</option>
                <option value="6F">6° ano do Ensino Fundamental</option>
                <option value="7F">7° ano do Ensino Fundamental</option>
                <option value="8F">8° ano do Ensino Fundamental</option>
                <option value="9F">9° ano do Ensino Fundamental</option>
                <option value="1M">1° ano do Ensino Médio</option>
                <option value="2M">2° ano do Ensino Médio</option>
                <option value="3M">3° ano do Ensino Médio</option>
            </select>
        </div>

        <div class="info create">
            <div>Carga horária semanal</div>
            <input 
                type="number" 
                name="study_load"
                placeholder=" Somente o n° de horas esperado"
                value="{{student.study_load}}"
            >
        </div>

        <div class="info create">
            <div>Professor</div>
            <select name="teacher_id">
                {% for teacher in teachers %}
                <option value="{{teacher.id}}" {% if student.teacher_id == teacher.id %}selected{% endif %}>{{teacher.name}}</option>
                {% endfor %}
            </select>
        </div>

        </section>

        <button type="submit">Salvar</button>