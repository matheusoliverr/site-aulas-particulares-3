{% extends "layouts.njk" %}

{% block content %}

<section class="card">
    <div class="card-image" style="background: url({{student.avatar_url}}) no-repeat center center /cover">
        
    </div>

    <div class="card-content">
        <h3>Detalhes</h3>
        
        <section class="card-info">
        <div class="info">
            <div>Nome Completo</div>
            <div>{{student.name}}</div>
        </div>

        <div class="info">
            <div>Idade</div>
            <div>{{student.age}}</div>
        </div>

        <div class="info">
            <div>Aniversário</div>
            <div>
            <span>{{student.birth_day}}</span>
            </div>
        </div>

        <div class="info">
            <div>Grau de escolaridade</div>
            <div>
            <span class="grade-span">{{student.grade}}</span>
            </div>
        </div>

        <div class="info">
            <div>Email</div>
            <div>{{student.email}}</div>
        </div>

        <div class="info">
            <div>Carga horária semanal</div>
            <div>{{student.study_load}}</div>
        </div>

        <div class="info">
            <div>Professor</div>
            <div>{{teacher.name}}</div>
        </div>

        </section>

        <form class="delete-form" action="/students?_method=DELETE" method="POST">
            <input type="hidden" name="id" value="{{student.id}}">
            <button type="submit">Deletar</button>
        </form>

        <a class="edit-button" href="/students/{{student.id}}/edit">Editar Dados</a>

    </div>
</section>

{% include "confirm.njk" %}

{% endblock content %}