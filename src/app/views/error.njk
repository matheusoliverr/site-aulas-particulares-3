{% extends "layouts.njk" %}

{% block content %}
<div class="error-page">
    <div class="error-lottie"></div>
    <h2>Eita!</h2>
    <p>Parece que algo deu errado. Tente novamente!</p>
    <a onclick="history.back()">Voltar</a>
</div>

<script src="/lottie.min.js"></script>

<script>
    const element = document.querySelector(".error-lottie")
    lottie.loadAnimation({
        container: element,
        renderer: 'svg',
        loop: false,
        autoplay: true,
        path: '/14651-error-animation.json'
    }).setSpeed(0.7)
</script>
{% endblock content %}